     private void shiftDown(Match match) {
         if (match.Order < matches.Count) {
             //Match temp = matches.ToList()[match.Order + 1];
             matches.ToList()[match.Order].Order--;
             match.Order++;
         }
         
         
     }
     
     private void shiftUp(Match match) {
         if (match.Order > 1) {
             //match.Order--;
             Match temp = matches.ToList()[match.Order - 1];
             temp.Order++;
             match.Order--;
             matches.ToList()[match.Order + 1] = temp;
             
         }
         
     }
     
     

