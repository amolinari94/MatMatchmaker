@page "/dashboard"
@layout BlazorApp.Components.Layout.HeaderLayout

<div class="dashboard">
    
    <div class="grid-container">
        <div class="grid-item blue-background">
            <input type="checkbox" title="event menu" class="eventmenu-toggler" />

            <div class="nav-scrollable" onclick="document.querySelector('.eventmenu-toggler').click()">
                <nav class="flex-column">
                    <div class="header">
                        <img src="Mizzou.jpg" alt="Profile Picture" class="profile-picture" />
                        <h1>Welcome Coach Blank!</h1>
                    </div>
                    <div class="box">
                        <h1>Upcoming Event</h1>
                        <h2>University of Missouri</h2>
                        <h3>May 16, 2024 at 12pm</h3>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="EventViewer">
                            <span class="bi bi-calendar-icon" aria-hidden="true"></span> Events
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Event">
                            <span class="bi bi-calendar-icon" aria-hidden="true"></span> Create Event
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="#">
                            <span class="bi bi-chat-icon" aria-hidden="true"></span> Message a Coach
                        </NavLink>
                    </div>
                </nav>
            </div>
        </div>
        <div class="grid-item">
            <Roster />
        </div>
    </div>
    <div class="calendar-box">
        <div class="calendar">
            <EventCalendar />
        </div>
    </div>
</div>