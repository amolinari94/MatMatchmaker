            <h1 class="title"><img src="favicon.png" width="60" height="45" style="padding-right: 10px;">Mat Matchmaker</h1>
            <Dropdown>
                <DropdownToggleButton Color="ButtonColor.Primary">
                    <Icon Name="IconName.PersonCircle" style="margin-right: 5px;" />Profile
                </DropdownToggleButton>
                <DropdownMenu style="">
                    <DropdownItem To="/dashboard" Type="ButtonType.Link">Dashboard</DropdownItem>
                    <DropdownItem To="/roster" Type="ButtonType.Link">Manage Roster</DropdownItem>
                    <DropdownItem To="#" Type="ButtonType.Link">Settings</DropdownItem>
                    <DropdownItem To="/" Type="ButtonType.Link">Log Out</DropdownItem>
